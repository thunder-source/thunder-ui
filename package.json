{
  "name": "@thunder-source/thunder-ui",
  "version": "1.0.11",
  "description": "Reusable React component library",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    },
    "./styles": "./dist/styles.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "npm run build:types && npm run build:bundle && npm run build:css",
    "build:bundle": "rollup -c",
    "build:css": "echo /* Styles are included in components */ > ./dist/styles.css",
    "build:types": "tsc --project tsconfig.build.json",
    "lint": "biome check src",
    "format": "biome format --write src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "cross-env NODE_OPTIONS=--max-old-space-size=4096 storybook build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.488.0",
    "react-day-picker": "8.10.1",
    "react-hook-form": "^7.56.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.5",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3",
    "@tailwindcss/vite": "^4.1.4",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@svgr/rollup": "^8.1.0",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.49",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "@storybook/addon-docs": "^10.0.3",
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.22.0",
    "@storybook/addon-onboarding": "^10.0.3",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react-vite": "^10.0.3",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^10.0.3",
    "globals": "^16.0.0",
    "http-server": "^14.1.1",
    "playwright": "^1.52.0",
    "simple-git-hooks": "^2.12.1",
    "storybook": "^10.0.3",
    "tailwindcss": "^4.1.4",
    "terser": "^5.39.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.1",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.1.1"
  }
}
