{
  "name": "@thunder-source/thunder-ui",
  "version": "1.0.12",
  "description": "Reusable React component library",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.esm.js"
    },
    "./styles": "./dist/styles.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:types\" \"pnpm run dev:bundle\"",
    "dev:bundle": "rollup -c --watch",
    "dev:types": "tsc --project tsconfig.build.json --watch",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:bundle",
    "build:bundle": "cross-env NODE_ENV=production rollup -c",
    "build:types": "tsc --project tsconfig.build.json",
    "clean": "node -e \"const fs=require('fs'); const path=require('path'); const rimraf=(p)=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){}}; rimraf(path.join(__dirname,'dist'));\"",
    "lint": "biome check src",
    "format": "biome format --write src",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "cross-env NODE_OPTIONS=--max-old-space-size=4096 storybook build",
    "chromatic": "chromatic",
    "prepublishOnly": "npm run build",
    "validate": "node scripts/validate-package.js",
    "test:consumer": "cd test-consumer-app && npm install && npm run dev",
    "pack:test": "npm pack && echo '\nâœ… Test package created. Install in test app with: npm install ../*.tgz'"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --apply",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "typescript",
    "tailwindcss",
    "radix-ui",
    "component-library"
  ],
  "author": "Praditya Manjhi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thunder-source/thunder-ui.git"
  },
  "bugs": {
    "url": "https://github.com/thunder-source/thunder-ui/issues"
  },
  "homepage": "https://github.com/thunder-source/thunder-ui#readme",
  "sideEffects": [
    "**/*.css",
    "**/index.css",
    "./dist/styles.css"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-redux": "^8.0.0 || ^9.0.0",
    "react-router-dom": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slider": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.488.0",
    "react-day-picker": "8.10.1",
    "react-hook-form": "^7.56.0",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.22.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@storybook/addon-docs": "^10.0.3",
    "@storybook/addon-onboarding": "^10.0.3",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react-vite": "^10.0.3",
    "@storybook/test": "^8.6.12",
    "@svgr/rollup": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/vite": "^4.1.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "chromatic": "^13.3.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^10.0.3",
    "globals": "^16.0.0",
    "http-server": "^14.1.1",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.52.0",
    "postcss": "^8.4.49",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.6",
    "rollup": "^4.28.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "simple-git-hooks": "^2.12.1",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.4",
    "terser": "^5.39.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.1",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19",
        "react-dom": "19"
      }
    }
  }
}
