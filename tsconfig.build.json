{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./dist",
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["src"],
	"exclude": [
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx",
		"src/**/*.test.ts",
		"node_modules"
	]
}

